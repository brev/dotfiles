### exports

export CLICOLOR=1
export PATH=$PATH:/usr/local/share/npm/bin

### aliases

alias grep='grep --color=auto'
alias solarized-light='osascript -e "tell application \"Terminal\" to set current settings of selected tab of front window to first settings set whose name is \"Solarized Light\""'
alias solarized-dark='osascript -e "tell application \"Terminal\" to set current settings of selected tab of front window to first settings set whose name is \"Solarized Dark\""'

### other

# Git bash completion
if [ -f `/usr/local/bin/brew --prefix`/etc/bash_completion ]; then
	. `/usr/local/bin/brew --prefix`/etc/bash_completion
fi

### prompt

export PS1='[\h \W$(__git_ps1 " (%s)")]\$ '
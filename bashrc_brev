### exports

export CLICOLOR=1
unset LSCOLORS
export PATH=$PATH:/usr/local/share/npm/bin:~/bin

### aliases

alias grep='grep --color=auto'

alias ga='git add'
alias gb='git branch'
alias gch='git checkout'
alias gcl='git clone'
alias gco='git commit'
alias gd='git diff'
alias gf='git fetch'
alias gl='git log'
alias gme='git merge'
alias gmv='git mv'
alias gpul='git pull'
alias gpus='git push'
alias grm='git rm'
alias gstas='git stash'
alias gstat='git status'

### other

# Git bash completion
if [ -f `/usr/local/bin/brew --prefix`/etc/bash_completion ]; then
	. `/usr/local/bin/brew --prefix`/etc/bash_completion
fi

### prompt

export PS1='[\h \W$(__git_ps1 " (%s)")]\$ '